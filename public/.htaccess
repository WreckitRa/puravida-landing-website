RewriteEngine On
RewriteBase /

# 1. Serve exact file if it exists
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# 2. If a directory is requested but no index.html exists inside,
#    map clean URL -> .html file
#    ex: /terms-conditions â†’ terms-conditions.html
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}/index.html !-f
RewriteRule ^(.+?)/?$ $1.html [L]

# 3. SPA fallback only if file doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]
