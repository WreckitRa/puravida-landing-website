RewriteEngine On
RewriteBase /

# 1. If file exists, serve it
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# 2. If request matches a folder, try loading the .html file instead
# ex: /terms-conditions -> terms-conditions.html
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# 3. SPA fallback (only if no html file exists)
RewriteCond %{REQUEST_FILENAME}.html !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]
